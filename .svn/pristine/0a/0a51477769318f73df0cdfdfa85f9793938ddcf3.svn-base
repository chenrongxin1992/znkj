}
.btn-common {
	margin: 0 20px 0 0;
	padding: 0 15px;
	display: inline-block;
	height: 23px;
	line-height: 23px;
	border: 1px solid #d2d2d2;
	background: #ffffff;
}
.avatar-upload-box .btn-common {
	margin-top: 20px;
	color: #878787;
	text-decoration: none;
	box-shadow: 1px 1px rgb(226, 226, 226);
}
.avatar-upload-box .btn-common:hover {background:#e2e2e2;}
