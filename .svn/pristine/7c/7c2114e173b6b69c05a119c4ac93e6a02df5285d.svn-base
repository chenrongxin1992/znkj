.T-table{
	word-break: break-all;
	border-collapse: collapse;
	border: solid 1px #e8e8e8;
	width: 100%;
	border-top: none;
}
.T-table thead{
	background: url(/public/images/tr_top.png) repeat-x;
}
/*
.T-table thead tr{
	background-color: #f8f8f8;
}
*/
.T-table th{
	color: #275D96;
	border-bottom: 1px solid #e8e8e8;
	border-right: 1px solid #e8e8e8;
}
.T-table td{
	padding: 5px;
	border: solid 1px #e8e8e8;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.T-nodata tbody td{
	text-align: center;
	line-height: 34px;
}

.T-odd-tr td{
	background-color: #F8F8F8;
}
.T-th-wrap{
	height: 34px;
	line-height: 34px;
	position: relative;
	padding: 0 5px;
}
.T-th-money div{
	line-height: 17px;
}
.T-th-sort{
	cursor: pointer;
}
.T-sort{
	display: inline-block;
	padding-left: 16px;
	background: url("../images/T-up_down.png") 0 9px no-repeat;
	cursor: pointer;
}
.T-asc{
	background: url("../images/T-up.png") 0 9px no-repeat; 
}
.T-desc{
	background: url("../images/T-down.png") 0 9px no-repeat; 
}
.T-td-wrap{
	line-height: 20px;
}
.T-td-left{
	text-align: left;
}
.T-td-right{
	text-align: right;
}
.T-td-center{
	text-align: center;
}
.T-no-break{
	overflow: hidden;
	height: 20px;
	text-overflow: ellipsis;
	white-space: nowrap;
	/*max-width: 200px;*/
}
.mw300{
	max-width: 300px;
}
.mw400{
	max-width: 400px;
}
.T-preview{
	position: relative;
	cursor: pointer;
}
.T-footer{
	height: 28px;
}
.T-footer-main{
	float: right;
}
.T-page{
	float: left;
	display: inline;
	margin-left: 4px;
	padding: 0 8px;
	height: 26px;
	border: 1px solid;
	background-color: #FFF;
	background-repeat: no-repeat;
	color: #333;
	overflow: hidden;
	text-decoration: none;
	border-color: #C2D5E3;
	font-family: Tahoma,'Microsoft Yahei','Simsun';
	line-height: 26px;
}
.T-page:hover{
	text-decoration: none;
}
.T-page-dis {
	background-color: #DEEBF3;
	color: #333;
	border-color: #C2D5E3;
}
.T-count-wrap{
	background: url(../images/table_bottom.jpg) 0 0 repeat-x;
	line-height: 32px;
	border: solid 1px #D5D5D5;
	padding-left: 10px;
	border-top: 0;
}
.T-count-wrap span{
	margin: 0;
}

.T-total-black{
	color:black;
	font-weight:bold;
}
.px {
	padding: 0;
	width: 25px;
	height: 16px;
	line-height: 16px;
	border: 1px solid;
	border-color: #848484 #E0E0E0 #E0E0E0 #848484;
}
.T-total-green{
	color:green;
	font-weight:bold;
}
.T-total-red{
	color:red;
	font-weight:bold;
}